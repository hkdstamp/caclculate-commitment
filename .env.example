# AWS Credentials for Price List API
CC_AWS_ACCESS_KEY_ID=your_access_key_id_here
CC_AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
CC_AWS_REGION=us-east-1

# Price API Settings
# Enable/disable real-time price fetching for RI and SP (true/false)
# When enabled, fetches both Reserved Instance and Savings Plans pricing
CC_ENABLE_AWS_PRICE_API=false

# Cache duration for price data (in seconds)
# Default: 86400 seconds (24 hours)
CC_PRICE_CACHE_DURATION=86400

# AWS Price List API Rate Limiting and Retry Settings
# Delay between API calls (milliseconds)
# Default: 1000ms - Prevents ThrottlingException
CC_AWS_API_CALL_DELAY=1000

# Maximum number of retries on ThrottlingException
# Default: 5 retries
CC_AWS_API_MAX_RETRIES=5

# Initial retry delay (milliseconds)
# Uses exponential backoff: delay * 2^attempt
# Default: 5000ms (5 seconds)
CC_AWS_API_INITIAL_RETRY_DELAY=5000
